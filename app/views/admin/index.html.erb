<p style="color: green"><%= notice %></p>

<%= link_to "Main page", root_path %>
<%= link_to "New real estate", new_real_estate_path %>
<%= link_to "Search", :search %>
<%= link_to "Profile", :my %>

<h1>Admin panel</h1>

<div id="real_estates">
  <% @real_estates.each do |real_estate| %>
    <%= render real_estate %>
    <p>
    <strong>Validated:</strong>
    <% if real_estate.validated %>
      Да
    <% else %>
      Нет
    <% end %>
    </p>
    <p>
      <%= link_to "Show this real estate", real_estate %>
      <%= link_to "Edit this real estate", edit_real_estate_path(real_estate) %>
      <%= link_to "Change validation of this real estate", revalidate_real_estate_path(real_estate) %>
      <%= button_to "Delete this real estate", real_estate, method: :delete %>
    </p>
  <% end %>
</div>